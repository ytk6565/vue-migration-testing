{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true
  },
  "exclude": [
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/*.test.ts",
    "**/*.cy.ts",
    "**/*.spec.ts"
  ],
  "tsc-alias": {
    "replacers": {
      "vue3Replacer": {
        "enabled": true,
        "file": "./vue3Replacer.cjs",
      }
    }
  }
}
